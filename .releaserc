{
  "debug": true,
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "bump2version --allow-dirty --current-version ${lastRelease.version} --new-version ${nextRelease.version} patch"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "common/version.go", "README.md", "CHANGELOG.md", ".bumpversion.cfg"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}",
        "author": {
          "name": "IBM",
          "email": "devx.network.services@ibm.com"
        }
      }
    ],
    "@semantic-release/github"
  ]
}
